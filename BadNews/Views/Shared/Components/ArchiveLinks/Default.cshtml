@model IList<int>

<div class="p-4 archive-links-container">
    <h3>Архив новостей</h3>
    <ol class="list-unstyled mb-0">
        @foreach (var year in Model)
        {
            var news = year == DateTime.Now.Year 
                ? "Новости этого года" 
                : $"Новости за {year}";
            
                <li>
                    <a asp-controller="News" asp-action="Index" asp-route-year="@year">
                        @news
                    </a>
                </li>
        }
    </ol>
</div>