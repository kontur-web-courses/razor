@model Task<BadNews.Repositories.Weather.WeatherForecast>
@{
    string FormatTemperature(int temperature) => temperature > 0 ? $"+{temperature}" : temperature.ToString();
}

<div class="p-4 bg-secondary text-light rounded weather-container">
    <h3>Погода сейчас</h3>
    <div><img src=@Model.Result.IconUrl></div>
    <div class="mb-2 weather-temperature">@FormatTemperature(@Model.Result.TemperatureInCelsius)</div>
</div>
