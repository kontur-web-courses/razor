@model BadNews.Models.News.IndexModel
@using System.Web

@section Header
{
    <div class="row mb-2">
        @foreach (var article in Model.FeaturedArticles)
        {
            <div class="col-md-6">
                <div class="row no-gutters border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                    <div class="col p-4 d-flex flex-column position-static">
                        <h3 class="mb-0">@article.Header</h3>
                        <div class="mb-1 text-muted">@article.Date.ToString("d MMM yyyy", ViewBag.Culture)</div>
                        <p class="card-text mb-auto">
                            @article.Teaser
                        </p>
                        <a asp-controller="News" asp-action="FullArticle" asp-route-id=@article.Id.ToString()>Читать полностью</a>
                    </div>
                </div>
            </div>
        }
    </div>
}

<!-- Body -->

<main role="main" class="container">
    <div class="row">
        <div class="col-md-8 news-main">
            @foreach (var article in Model.PageArticles)
            {
                var url = $"/news/fullarticle/{HttpUtility.UrlEncode(article.Id.ToString())}";
                <div class="news-article">
                    <h4 class="news-article-title">@article.Header</h4>
                    <p class="news-article-meta">
                        @article.Date.ToString("d MMM yyyy", ViewBag.Culture)
                    </p>
                    <p class="mb-auto">
                        @article.Teaser
                    </p>
                    <a asp-controller="News" asp-action="FullArticle" asp-route-id=@article.Id.ToString()>Читать полностью</a>
                </div>
            }

            <nav class="news-pagination">
                <a class="btn btn-outline-primary" asp-controller="News"  asp-route-pageIndex=@(!Model.IsFirst ? Model.PageIndex - 1 : 0)>
                    Старше
                </a>
                <a class="btn btn-outline-primary" asp-controller="News"  asp-route-pageIndex=@(!Model.IsLast ? Model.PageIndex + 1 : 0)>
                    Старше
                </a>
            </nav>
        </div>

        <aside class="col-md-4 news-sidebar">
        </aside>
    </div>
</main>

<footer class="news-footer">
    <p>
        <a href="#">Наверх</a>
    </p>
</footer>